@When("^I filled the registration details$")
public void i_filled_the_registration_details() throws IOException 
{
	  File file=new File(excelInfo);
	  FileInputStream fis=new FileInputStream(file);
	  
	  //Read data from Excel(.xlsx)		 
	  XSSFWorkbook workbook=new XSSFWorkbook(fis);	  
	  XSSFSheet sheet=workbook.getSheet("RegistrationData");
	  
	  int recordsCount=sheet.getLastRowNum()- sheet.getFirstRowNum();
	  
	  for(int i=1;i<=recordsCount;i++)
		{
		  for(int j=0;j<recordsCount;j++)
		  {
			  //String login=sheet.getRow(i).getCell(j).getStringCellValue();
			 /* String email=sheet.getRow(i).getCell(j).getStringCellValue();
			  String newPassword=sheet.getRow(i).getCell(j).getStringCellValue();
			  String confirmPassword=sheet.getRow(i).getCell(j).getStringCellValue();*/
			  registerData.put("login", sheet.getRow(i).getCell(j).getStringCellValue());
		  }
		  
	   /*   //Filling registration details
	   driver.findElement(RegistrationRepo.login).click();
	   driver.findElement(RegistrationRepo.email).click();
	   driver.findElement(RegistrationRepo.newPassword).click();
	   driver.findElement(RegistrationRepo.newPasswordConfirm).click();*/
		}
}

@Then("^registration should be done successfully$")
